{% extends 'base.html.twig' %}

{% block title %}User {% endblock %}

{% block body %}
    <div class="container" style="background: navajowhite;border: 0;margin-left: 10px;">
    <h1>Usuarios</h1>

    <table class="table" style="width: 400px;">
        <thead>
            <tr>
                <th>Actions</th>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Roles</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}

            <tr>
                <td><a href="{{ path('app_user_show', {'id':user.id}) }}">Mostrar</a>
                    <a href="{{ path('app_user_edit', {'id':user.id}) }}">Editar</a>
                </td>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay registros/td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Crear</a>
</div>
{% endblock %}
